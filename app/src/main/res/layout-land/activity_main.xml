<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">



    <!--    Vertical Constraints-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintVertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintVertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintVertical3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.41" />

    <!--    Horizontal Constraints -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintHorizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintHorizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintHorizontal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.31" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintHorizontal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.87" />

    <!--    Text View -->

    <TextView
        android:id="@+id/textHeading"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="MINDJAR"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/contraintHorizontal1"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="93dp"
        android:layout_height="112dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toTopOf="@+id/contraintHorizontal1"
        app:srcCompat="@drawable/jar_icon"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintVertical4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.58" />

    <TextView
        android:id="@+id/textSubheading"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="YOUR EMOTION'S MATTER"
        android:textAlignment="center"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textHeading"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toTopOf="@+id/contraintHorizontal3"
        tools:ignore="MissingConstraints" />


    <!--    Image View-->

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Password"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/editUserName"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Forgot Password"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Or Register With"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/textForgotPassword" />

    <EditText
        android:id="@+id/editUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/textUserName"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/textPassword" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/editPassword"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Login"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iconTwitter"
        android:layout_width="68dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toTopOf="@+id/contraintHorizontal2"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical4"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical3"
        app:layout_constraintTop_toTopOf="@+id/contraintHorizontal4"
        app:srcCompat="@drawable/twitter_circle"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iconGoogle"
        android:layout_width="68dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toTopOf="@+id/contraintHorizontal2"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical3"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toTopOf="@+id/contraintHorizontal4"
        app:srcCompat="@drawable/google" />

    <ImageView
        android:id="@+id/iconFacebook"
        android:layout_width="68dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toTopOf="@+id/contraintHorizontal2"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical4"
        app:layout_constraintTop_toTopOf="@+id/contraintHorizontal4"
        app:srcCompat="@drawable/facebook" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>