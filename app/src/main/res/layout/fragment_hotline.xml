<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light"
    tools:context=".ui.hotline.HotlineFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Guidelines -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalConstraint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalConstraint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalConstraint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"/>

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F4FCD9"
            app:layout_constraintTop_toTopOf="@id/horizontalConstraint1"
            app:layout_constraintStart_toStartOf="@id/verticalConstraint1"
            app:layout_constraintEnd_toStartOf="@id/verticalConstraint2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/hotline"
                    android:contentDescription="@string/cd_hotline_header" />

                <TextView
                    android:id="@+id/textWelcomeUser"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/hotline_header"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/hotline_caption"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            app:layout_constraintStart_toStartOf="@id/verticalConstraint1"
            app:layout_constraintEnd_toStartOf="@id/verticalConstraint2" />

        <!-- Card template (reused 3x) -->
        <!-- card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardContent1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#EAF2FF"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/textView1"
            app:layout_constraintStart_toStartOf="@id/verticalConstraint1"
            app:layout_constraintEnd_toStartOf="@id/verticalConstraint2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/textHeaderCard1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hotline_ncmh_title"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hotline_ncmh_detail" />

                    <ImageView
                        android:id="@+id/imageEmail"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/email"
                        android:contentDescription="@string/cd_email" />

                    <ImageView
                        android:id="@+id/imagePhone"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/phone"
                        android:contentDescription="@string/cd_phone" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardContent2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#EAF2FF"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/cardContent1"
            app:layout_constraintStart_toStartOf="@id/verticalConstraint1"
            app:layout_constraintEnd_toStartOf="@id/verticalConstraint2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/textHeaderCard2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hotline_hopeline_title"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hotline_hopeline_detail" />

                    <ImageView
                        android:id="@+id/imageEmail2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/email"
                        android:contentDescription="@string/cd_email" />

                    <ImageView
                        android:id="@+id/imagePhone2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/phone"
                        android:contentDescription="@string/cd_phone" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardContent3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#EAF2FF"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/cardContent2"
            app:layout_constraintStart_toStartOf="@id/verticalConstraint1"
            app:layout_constraintEnd_toStartOf="@id/verticalConstraint2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/textHeaderCard3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hotline_touch_title"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hotline_touch_detail" />

                    <ImageView
                        android:id="@+id/imageEmail3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/email"
                        android:contentDescription="@string/cd_email" />

                    <ImageView
                        android:id="@+id/imagePhone3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/phone"
                        android:contentDescription="@string/cd_phone" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>