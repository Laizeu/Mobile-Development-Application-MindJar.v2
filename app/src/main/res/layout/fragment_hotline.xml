<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HotlineFragment">

<!-- Vertical Constraints -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalConstraint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalConstraint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90"/>

<!--    Horizontal-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalConstraint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

    <!--    Header -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint2"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint1"
        app:layout_constraintTop_toTopOf="@+id/horizontalConstraint1"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:src="@drawable/hotline" />

        <LinearLayout
            android:layout_width="229dp"
            android:layout_height="100dp"
            android:layout_gravity="end">


            <TextView
                android:id="@+id/textWelcomeUser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Hotline"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text='“If you ever feel overwhelmed, remember that reaching out is a sign of strength, not weakness. You are not alone—help is just one call away.”'
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint1"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <!--    First Card Item-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent1"
        android:layout_width="313dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint1"
        app:layout_constraintTop_toBottomOf="@+id/textView1">

        <TextView
            android:id="@+id/textHeaderCard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="National Center for Mental Health (NCMH) Crisis"
            android:textSize="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                android:text="Hotline: Dial 1553 (toll-free) or 1800-1888-1553." />

            <ImageView
                android:id="@+id/imageEmail"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/email" />

            <ImageView
                android:id="@+id/imagePhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/phone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--    Second Card Item-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent2"
        android:layout_width="313dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint1"
        app:layout_constraintTop_toBottomOf="@+id/cardContent1">

        <TextView
            android:id="@+id/textHeaderCard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:text="Hopeline"
            android:textSize="24dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                android:text="Hotline: (02) 8804-4673, 0918-878-4673 Globe, dial the toll-free code 2919." />

            <ImageView
                android:id="@+id/imageEmail2"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/email" />

            <ImageView
                android:id="@+id/imagePhone2"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/phone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!--    Third Card Item-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent3"
        android:layout_width="313dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint1"
        app:layout_constraintTop_toBottomOf="@+id/cardContent2">

        <TextView
            android:id="@+id/textHeaderCard3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:text="Touch Community Services Crisis Lines"
            android:textSize="24dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="180dp"
                android:layout_height="42dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="12dp"
                android:text="Hotline: (02) 8893-7603 and 0922-893-8944 (Sun)." />

            <ImageView
                android:id="@+id/imageEmail3"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/email" />

            <ImageView
                android:id="@+id/imagePhone3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/phone" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>