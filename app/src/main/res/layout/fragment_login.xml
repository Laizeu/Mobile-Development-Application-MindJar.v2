<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/background_light"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!--    Vertical Constraints-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/constraintVertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/constraintVertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/constraintVertical3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.37"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/constraintVertical4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.63" />

    <!--    Horizontal Constraints -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/constraintHorizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/constraintHorizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="5dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/constraintHorizontal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/constraintHorizontal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.83" />

    <!-- Header icon MindJar Image -->

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="133dp"
        android:layout_height="145dp"
        app:layout_constraintStart_toStartOf="@+id/constraintVertical1"
        app:layout_constraintTop_toTopOf="@+id/constraintHorizontal1"
        app:srcCompat="@drawable/jar_icon"
        tools:ignore="MissingConstraints" />

    <!--    Text View -->

    <TextView
        android:id="@+id/textSubheading"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="YOUR EMOTION'S MATTER"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/constraintVertical2"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textHeading"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textHeading"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="MINDJAR"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/constraintVertical2"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/constraintHorizontal1"
        tools:ignore="MissingConstraints" />


    <!-- Input Validation edited by Laiza Text Input of Email -->

    <TextView
        android:id="@+id/inputEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Email"

        app:layout_constraintEnd_toStartOf="@+id/constraintVertical2"
        app:layout_constraintStart_toStartOf="@+id/constraintVertical1"
        app:layout_constraintTop_toTopOf="@+id/constraintHorizontal3"
        tools:ignore="MissingConstraints"
        />


    <!-- Edit Text of Email  -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailContainer"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:helperTextEnabled="true"
        app:helperTextTextColor="@android:color/holo_red_dark"
        app:layout_constraintEnd_toStartOf="@+id/constraintVertical2"
        app:layout_constraintStart_toStartOf="@+id/constraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:lines="1" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Text Input of Password edited by Laiza -->

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"

        android:text="Password"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toStartOf="@+id/constraintVertical2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/constraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/emailContainer"
        tools:ignore="MissingConstraints" />

    <!-- Edit Text of Password edited by Laiza -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordContainer"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:helperTextEnabled="true"
        app:helperTextTextColor="@android:color/holo_red_dark"
        app:endIconMode="password_toggle"
        app:layout_constraintEnd_toStartOf="@+id/constraintVertical2"
        app:layout_constraintStart_toStartOf="@+id/constraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/textPassword">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:lines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/rowRememberForgot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/constraintVertical1"
        app:layout_constraintEnd_toStartOf="@+id/constraintVertical2"
        app:layout_constraintTop_toBottomOf="@+id/passwordContainer">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textStyle="italic"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Login Button -->

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:text="Login"
        android:textSize="20sp"
        android:backgroundTint="@color/button_green"
        app:layout_constraintEnd_toStartOf="@+id/constraintVertical2"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/constraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/rowRememberForgot"
        tools:ignore="MissingConstraints" />

    <!-- Sign Up Link -->

    <TextView
        android:id="@+id/txtSignUpLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Donâ€™t have an account? Sign Up"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/constraintVertical1"
        app:layout_constraintEnd_toStartOf="@+id/constraintVertical2"
        app:layout_constraintHorizontal_bias="0.5"/>

    <LinearLayout
        android:id="@+id/socialGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/constraintVertical2"
        app:layout_constraintStart_toStartOf="@+id/constraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/txtSignUpLink">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="or continue with"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconGoogle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:src="@drawable/google" />

            <ImageView
                android:id="@+id/iconFacebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/iconTwitter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:src="@drawable/twitter_circle" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>





