<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".RealizationFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--  Vertical Constraints  -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalConstraint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalConstraint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalConstraint3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"/>

<!--    Horizontal Constraints-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalConstraint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04"/>


<!--    Header -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint2"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint1"
        app:layout_constraintTop_toTopOf="@+id/horizontalConstraint1"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:src="@drawable/head" />

        <LinearLayout
            android:layout_width="229dp"
            android:layout_height="100dp"
            android:layout_gravity="end">


            <TextView
                android:id="@+id/textWelcomeUser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Realization"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="131dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/jar_icon"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint1"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="157dp"
        android:layout_height="29dp"
        android:layout_marginTop="68dp"
        android:text="Calendar"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint3"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Button
        android:id="@+id/button"
        android:layout_width="161dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:text="My Journey"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint3"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Weekly Inspiration"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint2"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint1"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

<!--    First Card Item-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent1"
        android:layout_width="313dp"
        android:layout_height="124dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint1"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:src="@drawable/slightly_happy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:text="Today - Feeling Happy"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Let your happiness fill the room today. Share a smile, a laugh, and the joy you feel with those around you."
                    android:textSize="14dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

<!--    Second Card Item -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent2"
        android:layout_width="313dp"
        android:layout_height="124dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint1"
        app:layout_constraintTop_toBottomOf="@+id/cardContent1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:src="@drawable/relieved" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/card2Text1"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:text="Thursday - Feeling Grateful"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="169dp"
                    android:layout_height="80dp">

                    <TextView
                        android:id="@+id/card2Text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Pause for a moment and appreciate the good in your life. Your gratitude today is a magnet for more blessings tomorrow."
                        android:textSize="14dp" />

                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--    Third Card Item -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent3"
        android:layout_width="313dp"
        android:layout_height="124dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint1"
        app:layout_constraintTop_toBottomOf="@+id/cardContent2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:src="@drawable/sad" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/card3Text1"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:text="Wednesday - Feeling Worried"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="169dp"
                    android:layout_height="59dp">

                    <TextView
                        android:id="@+id/card3Text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Your mind is just rehearsing for the future. Take a deep breath and focus on what's within your control right now. You've got this."
                        android:textSize="14dp" />

                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

<!--    Fourth Card Content -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent4"
        android:layout_width="313dp"
        android:layout_height="124dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/verticalConstraint2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/verticalConstraint1"
        app:layout_constraintTop_toBottomOf="@+id/cardContent3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:src="@drawable/heart_face" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/card4Text1"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:text="Tuesday - Feeling Loved"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="169dp"
                    android:layout_height="59dp">

                    <TextView
                        android:id="@+id/card4Text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Open your heart to the love that surrounds you. Give a little back and watch how it grows even more."
                        android:textSize="14dp" />

                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>